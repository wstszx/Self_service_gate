<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Colored rectangle-->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="100dp"
                android:height="40dp" />
            <solid android:color="#7992C9" />
        </shape>
    </item>

    <!-- This rectangle for the left side -->
    <!-- Its color should be the same as layout's background -->
    <item
        android:bottom="-100dp"
        android:left="-350dp"
        android:right="100dp"
        android:top="-100dp">
        <rotate android:fromDegrees="-15">
            <shape android:shape="rectangle">
                <solid android:color="#F3F3F4" />
            </shape>
        </rotate>
    </item>

    <!-- This rectangle for the right side -->
    <!-- Their color should be the same as layout's background -->
    <item
        android:bottom="-100dp"
        android:left="100dp"
        android:right="-350dp"
        android:top="-100dp">
        <rotate android:fromDegrees="15">
            <shape android:shape="rectangle">
                <solid android:color="#F3F3F4" />
            </shape>
        </rotate>
    </item>

</layer-list>