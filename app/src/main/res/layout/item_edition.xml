<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_bg">

    <TextView
        android:id="@+id/tv_edition"
        style="@style/text8"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="版本1.1.4" />

    <TextView
        android:id="@+id/tv_edition_desc"
        style="@style/text9"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_edition"
        app:layout_constraintStart_toEndOf="@id/tv_edition"
        tools:text="(最新版)" />

    <TextView
        android:id="@+id/tv_date"
        style="@style/text10"
        android:layout_marginEnd="14dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_edition"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="11月14日  13：18" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_edition" />

    <TextView
        android:id="@+id/tv_question"
        style="@style/text10"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/tv_edition"
        app:layout_constraintTop_toBottomOf="@id/view"
        tools:text="11月14日  13：18" />

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="86dp"
        android:background="@color/white_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <TextView
        android:id="@+id/tv_update"
        style="@style/text4"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/view1"
        tools:text="立即更新" />


</androidx.constraintlayout.widget.ConstraintLayout>